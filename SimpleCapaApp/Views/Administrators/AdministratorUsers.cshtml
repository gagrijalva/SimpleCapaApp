@model IEnumerable<SimpleCapaApp.Models.User>

  
<h2>My Users</h2>

<table class="table">
    <tr>
        <th>
           First Name
        </th>
        <th>
           Last Name
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit user", "Edit", "Users",new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details","Users", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete","Users",  new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
